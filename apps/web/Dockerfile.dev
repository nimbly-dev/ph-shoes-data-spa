FROM node:18-alpine

WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm ci

# Bring in the rest of your source
COPY . .

# Ensure widgets build output exists for dev (Vite serves from memory)
RUN mkdir -p public/widgets

# Expose Viteâ€™s default dev port
EXPOSE 5173

# Use polling so file-watch inside Docker works reliably
ENV CHOKIDAR_USEPOLLING=true

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]

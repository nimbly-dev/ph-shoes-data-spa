FROM node:18-alpine AS builder
WORKDIR /repo

# Copy workspace manifests + sources
COPY package.json ./
COPY apps ./apps
COPY packages ./packages

# Install dependencies across workspaces
RUN npm install
ARG VITE_API_BASE_URL
ARG VITE_USER_ACCOUNTS_API_BASE_URL
ARG VITE_CATALOG_API_BASE_URL
ARG VITE_TEXT_SEARCH_API_BASE_URL
ARG VITE_ALERTS_API_BASE_URL
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
ENV VITE_USER_ACCOUNTS_API_BASE_URL=$VITE_USER_ACCOUNTS_API_BASE_URL
ENV VITE_CATALOG_API_BASE_URL=$VITE_CATALOG_API_BASE_URL
ENV VITE_TEXT_SEARCH_API_BASE_URL=$VITE_TEXT_SEARCH_API_BASE_URL
ENV VITE_ALERTS_API_BASE_URL=$VITE_ALERTS_API_BASE_URL

# Build web app (widgets bundled in main app)
RUN npm run build:web

# Verify final output
RUN echo "Final dist contents:" && \
    ls -la /repo/apps/web/dist/

FROM nginx:stable-alpine
WORKDIR /usr/share/nginx/html

COPY --from=builder /repo/apps/web/dist .
COPY apps/web/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

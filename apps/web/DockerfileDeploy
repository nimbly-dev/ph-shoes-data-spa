FROM node:18-alpine AS builder
WORKDIR /app

# Install dependencies without relying on a committed lockfile
COPY package.json ./
RUN npm install

COPY . .
ARG VITE_API_BASE_URL
ARG VITE_USER_ACCOUNTS_API_BASE_URL
ARG VITE_CATALOG_API_BASE_URL
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
ENV VITE_USER_ACCOUNTS_API_BASE_URL=$VITE_USER_ACCOUNTS_API_BASE_URL
ENV VITE_CATALOG_API_BASE_URL=$VITE_CATALOG_API_BASE_URL

RUN npm run build

FROM nginx:stable-alpine
WORKDIR /usr/share/nginx/html

COPY --from=builder /app/dist .
COPY --from=builder /app/dist/widgets ./widgets
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
